[Unit]
Description=RadioCalico Nginx Frontend Server
After=network.target

[Service]
Type=forking
PIDFile=/var/run/nginx.pid
User=nginx
Group=nginx
ExecStartPre=/usr/sbin/nginx -t -c /etc/nginx/nginx.conf
ExecStart=/usr/sbin/nginx -c /etc/nginx/nginx.conf
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=10
StandardOutput=append:/var/log/radiocalico-nginx.log
StandardError=append:/var/log/radiocalico-nginx-error.log

[Install]
WantedBy=multi-user.target
